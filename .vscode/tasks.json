    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean",
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "make",
            "args": [
                "",
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Release",
            "type": "shell",
            "command": "make",
            "args": [
                "RunRelease",
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}
